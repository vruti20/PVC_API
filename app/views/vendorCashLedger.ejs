<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ledger Account</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 90%;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .company-info,
        .client-info {
            width: 45%;
        }

        .company-info h1,
        .client-info h2 {
            margin: 0;
            font-size: 1.2em;
            text-align: center;
        }

        .company-info p,
        .client-info p {
            margin: 0;
            font-size: 0.9em;
            text-align: center;
        }

        .date-range {
            text-align: center;
            margin-bottom: 10px;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9em;
            table-layout: fixed; /* Fix table layout to prevent overflow */
        }

        thead th {
            border-bottom: 2px solid #000;
            padding: 8px;
            text-align: left;
        }

        tbody td {
            padding: 8px;
            word-wrap: break-word; /* Ensure content wraps within cell */
            white-space: normal; /* Prevent overflow */
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        .closing-balance {
            text-align: right;
            font-weight: bold;
        }

        td[colspan="4"] {
            text-align: right;
            padding-right: 20px;
        }

        td[colspan="4"]:last-child {
            text-align: left;
        }

        tfoot td {
            font-weight: bold;
        }
        .underline {
            border-top: 1px solid #000;
        }
    </style>

</head>
<body>
<div class="container">
    <div class="header">
        <div class="company-info">
            <h1><%= data.form.companyname %></h1>
            <p>
                <%= data.form.address1 %>,<br>
                <%= data.form.address2 %>,<br>
                <%= data.form.city %>,<br>
                <%= data.form.state %>,<br>
                Pincode: <%= data.form.pincode %>
            </p>
        </div>
        <div class="client-info">
            <h2><%= data.to.vendorname %></h2>
        </div>
    </div>
    <div class="date-range">
        <p><%= data.dateRange %></p>
    </div>
    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Particulars</th>
            <th>Vch Type</th>
            <th>Vch No.</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
        </thead>
        <tbody>
        <% for (let date in data.records) { %>
            <% data.records[date].forEach((record, index) => { %>
                <tr>
                    <td><%= index === 0 ? date : "" %></td>
                    <td><%= record.dataValues.particulars %></td>
                    <td><%= record.dataValues.vchType %></td>
                    <td><%= record.dataValues.vchNo %></td>
                    <td><%= record.dataValues.debitAmount ? record.dataValues.debitAmount.toFixed(2) : '' %></td>
                    <td><%= record.dataValues.creditAmount ? record.dataValues.creditAmount.toFixed(2) : '' %></td>
                </tr>
            <% }) %>
        <% } %>
        <tr>
            <td colspan="4"></td>
            <td class="underline"><%= data.totals.totalDebit.toFixed(2) %></td>
            <td class="underline"><%= data.totals.totalCredit.toFixed(2) %></td>
        </tr>
        <tr>
            <td colspan="4" class="closing-balance">By Closing Balance</td>
            <td class="underline"><%= data.closingBalance.type === "debit" ? data.closingBalance.amount.toFixed(2) : "" %></td>
            <td class="underline"><%= data.closingBalance.type === "credit" ? data.closingBalance.amount.toFixed(2) : ""%></td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td class="underline" style="border-width: 2px"><%= data.totalAmount.toFixed(2) %></td>
            <td class="underline" style="border-width: 2px"><%= data.totalAmount.toFixed(2) %></td>
        </tr>
        </tbody>
    </table>
</div>
</body>
</html>
