<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ledger Account</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            width: 90%;
            margin: 0 auto;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .company-info,
        .client-info {
            width: 45%;
        }

        .company-info h1,
        .client-info h2 {
            margin: 0;
            font-size: 1.2em;
            text-align: center;
        }

        .company-info p,
        .client-info p {
            margin: 0;
            font-size: 0.9em;
            text-align: center;
        }

        .date-range {
            text-align: center;
            margin-bottom: 10px;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9em;
            table-layout: fixed; /* Fix table layout to prevent overflow */
        }

        thead th {
            border-bottom: 2px solid #000;
            padding: 8px;
            text-align: left;
        }

        tbody td {
            padding: 8px;
            word-wrap: break-word; /* Ensure content wraps within cell */
            white-space: normal; /* Prevent overflow */
        }

        tbody tr:last-child td {
            border-bottom: none;
        }

        .closing-balance {
            text-align: right;
            font-weight: bold;
        }

        td[colspan="4"] {
            text-align: right;
            padding-right: 20px;
        }

        td[colspan="4"]:last-child {
            text-align: left;
        }

        tfoot td {
            font-weight: bold;
        }
        .underline {
            border-top: 1px solid #000;
        }
    </style>
</head>
<body>
<% function formatNumber(number) { %>
    <% return new Intl.NumberFormat('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }).format(number); %>
<% } %>
<div class="container">
    <div class="header">
        <div class="company-info">
            <h1><%= data.form.username %></h1>
        </div>
        <div class="client-info">
            <h2><%= data.to.vendorname %></h2>
        </div>
    </div>
    <div class="date-range">
        <p><%= data.dateRange %></p>
    </div>
    <table>
        <thead>
        <tr>
            <th>Date</th>
            <th>Particulars</th>
            <th>Vch Type</th>
            <th>Vch No.</th>
            <th>Debit</th>
            <th>Credit</th>
        </tr>
        </thead>
        <tbody>
        <% for (let date in data.records) { %>
            <% data.records[date].forEach((record, index) => { %>
                <tr>
                    <td><%= index === 0 ? date : "" %></td>
                    <td><%= record.particulars %></td>
                    <td><%= record.vchType %></td>
                    <td><%= record.vchNo %></td>
                    <td><%= record.debitAmount ? formatNumber(record.debitAmount) : '' %></td>
                    <td><%= record.creditAmount ? formatNumber(record.creditAmount) : '' %></td>
                </tr>
            <% }) %>
        <% } %>
        <tr>
            <td colspan="4"></td>
            <td class="underline"><%= formatNumber(data.totals.totalDebit) %></td>
            <td class="underline"><%= formatNumber(data.totals.totalCredit) %></td>
        </tr>
        <tr>
            <td colspan="4" class="closing-balance">By Closing Balance</td>
            <td class="underline"><%= data.closingBalance.type === "debit" ? formatNumber(data.closingBalance.amount) : "" %></td>
            <td class="underline"><%= data.closingBalance.type === "credit" ? formatNumber(data.closingBalance.amount) : ""%></td>
        </tr>
        <tr>
            <td colspan="4"></td>
            <td class="underline" style="border-width: 2px"><%= formatNumber(data.totalAmount) %></td>
            <td class="underline" style="border-width: 2px"><%= formatNumber(data.totalAmount) %></td>
        </tr>
        </tbody>
    </table>
</div>
</body>
</html>
